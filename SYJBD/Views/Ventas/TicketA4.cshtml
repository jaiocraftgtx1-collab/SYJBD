@model SYJBD.Models.Ventas.VentaComprobanteVM
@{
    Layout = null;

    string DocFull(string cod) => cod?.ToUpper() switch
    {
        "NTV" => "NOTA DE VENTA",
        "TKT" => "TICKET DE VENTA",
        "BLT" => "BOLETA ELECTRÓNICA",
        "FCT" => "FACTURA ELECTRÓNICA",
        _ => (Model?.TipoDocumentoLabel ?? "COMPROBANTE")
    };

    string doc = DocFull(Model.TipoDocumento);
    string serieId = Model.NumeroDoc;  // <—
    string fecha = Model.FechaVenta.ToString("dd/MM/yyyy");
    string hora = Model.FechaVenta.ToString("HH:mm");

    string qr = "https://api.qrserver.com/v1/create-qr-code/?size=180x180&data=" +
                Uri.EscapeDataString($"{Model.Serie}-{Model.IdVenta}|{Model.ClienteNombre}|{Model.Total:0.00}|{Model.FechaVenta:yyyy-MM-dd HH:mm}");
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Boleta A4 @Model.Serie-@Model.NumeroDoc</title>

    <style>
        /* Fondo animado en pantalla */
        @@media screen {
            body {
                background: linear-gradient(135deg, #f3f4f6, #f1f2f3, #e5e7eb, #f3f4f6);
                background-size: 400% 400%;
                animation: bgMove 18s ease infinite;
            }

            @@keyframes bgMove {
                0% {
                    background-position: 0% 50%;
                }

                50% {
                    background-position: 100% 50%;
                }

                100% {
                    background-position: 0% 50%;
                }
            }
        }

        /* Impresión: fondo blanco */
        @@media print {
            body {
                background: #fff !important;
                animation: none !important;
            }
        }

        html, body {
            font: 12px/1.35 "Inter",Arial,Helvetica,sans-serif;
            color: #111;
            margin: 0
        }

        .toolbar {
            position: sticky;
            top: 0;
            z-index: 3;
            display: flex;
            justify-content: center;
            gap: 12px;
            padding: 10px;
            background: #fff;
            border-bottom: 1px solid #eef1f5
        }

        .tbtn {
            padding: 8px 14px;
            border-radius: 999px;
            border: 1px solid #d0d7e2;
            background: #0f172a;
            color: #fff;
            cursor: pointer
        }

        .tbtn--ghost {
            background: #fff;
            color: #111;
            border-color: #e2e8f0
        }

        @@media print {
            .toolbar {
                display: none
            }
        }

        .sheet {
            max-width: 820px;
            margin: 16px auto;
            background: #fff;
            border-radius: 14px;
            padding: 24px;
            box-shadow: 0 18px 36px rgba(17,24,39,.14)
        }

        .brand {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 12px
        }

        .h1 {
            font-size: 22px;
            font-weight: 800;
            margin: 0
        }

        .chip {
            display: inline-block;
            border: 1px solid #111;
            border-radius: 999px;
            padding: 4px 10px;
            font-weight: 700
        }

        .grid4 {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr 1fr;
            gap: 8px;
            margin: 12px 0
        }

        .box {
            border: 1px solid #e5e7eb;
            border-radius: 10px;
            padding: 12px
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px
        }

        th, td {
            padding: 8px;
            border: 1px solid #e5e7eb
        }

        thead th {
            background: #f9fafb
        }

        .ta-right {
            text-align: right
        }

        .footer-note {
            font-size: 11px;
            color: #6b7280;
            margin-top: 8px
        }
    </style>
</head>
<body>

    <div class="toolbar no-print">
        <button class="tbtn--ghost tbtn" onclick="window.close()">Cerrar</button>
        <button class="tbtn" onclick="window.print()">Imprimir</button>
    </div>

    <div class="sheet">
        <div class="brand">
            <div>
                <div class="h1">S & J STYLE</div>
                <div>IMPORTACIONES Y EXPORTACIONES S & J STYLE S.A.C.<br />JR. TEMPLO DE ÁSPERO 318 URB. MANGOMARCA – SJL – LIMA<br />RUC: 20612188859</div>
            </div>
            <div style="text-align:right">
                <div class="chip">@doc</div><br />
                <div style="margin-top:6px;font-weight:700">@serieId</div>
            </div>
        </div>

        <div class="grid4">
            <div><b>Fecha de Emisión</b><div>@fecha</div></div>
            <div><b>Hora</b><div>@hora</div></div>
            <div><b>Señor(es)</b><div>@Model.ClienteNombre</div></div>
            <div><b>DT. S/RUC</b><div>@Model.ClienteRuc</div></div>

            <div><b>Tipo de Moneda</b><div>@Model.Moneda</div></div>
            <div><b>Vendedor</b><div>@Model.VendedorNombre</div></div>
            <div><b>Observación</b><div>&nbsp;</div></div>
            <div><b>&nbsp;</b><div>&nbsp;</div></div>
        </div>

        <table>
            <thead>
                <tr>
                    <th style="width:10%">Cantidad</th>
                    <th style="width:10%">Unidad</th>
                    <th style="width:12%">Código</th>
                    <th>Descripción</th>
                    <th style="width:14%">Valor Unitario</th>
                    <th style="width:16%">Importe de Venta</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var it in Model.Items)
                {
                    <tr>
                        <td class="ta-right">@it.Cantidad.ToString("0.##")</td>
                        <td>@it.IdUnidad</td>
                        <td>@it.IdProducto</td>
                        <td>@it.Nombre</td>
                        <td class="ta-right">@it.PrecioUnitario.ToString("0.00")</td>
                        <td class="ta-right">@it.Total.ToString("0.00")</td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Totales debajo de la tabla -->
        <table style="margin-top:8px">
            <tbody>
                <tr><td style="width:84%;text-align:right"><b>Op. Gravada</b></td><td class="ta-right">@Model.SubTotal.ToString("0.00")</td></tr>
                <tr><td style="text-align:right"><b>IGV</b></td><td class="ta-right">@Model.Igv.ToString("0.00")</td></tr>
                <tr><td style="text-align:right"><b>Importe Total</b></td><td class="ta-right"><b>@Model.Total.ToString("0.00")</b></td></tr>
            </tbody>
        </table>

        <!-- Forma de Pago -->
        <div class="box" style="margin-top:12px">
            <b>Forma de Pago:</b>
            <div style="margin-top:6px">
                @if (!string.IsNullOrWhiteSpace(Model.MP1) && Model.MontoMP1 > 0)
                {
                    <div>@Model.MP1: S/ @Model.MontoMP1.ToString("0.00")</div>
                }
                @if (!string.IsNullOrWhiteSpace(Model.MP2) && Model.MontoMP2 > 0)
                {
                    <div>@Model.MP2: S/ @Model.MontoMP2.ToString("0.00")</div>
                }
            </div>
        </div>

        <!-- QR al final -->
        <div style="display:flex;justify-content:center;margin-top:14px">
            <img src="@qr" width="180" height="180" alt="QR" />
        </div>

        <div class="footer-note">
            Esta es una representación impresa del comprobante electrónico.
        </div>
    </div>
</body>
</html>
