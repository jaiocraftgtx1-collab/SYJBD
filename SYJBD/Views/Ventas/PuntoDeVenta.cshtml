@using SYJBD.Models
@using System.Security.Claims

@model PagedResult<CajaListadoVM>

@{
    var uid = User.FindFirstValue(ClaimTypes.NameIdentifier) ?? "";
}

@{
    ViewData["Title"] = "Cajas de venta";
}

<div class="card soft">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="mb-0">Cajas de venta</h2>

            <!-- NUEVO: ABRIR CAJA -->
            <a class="btn btn-primary"
               data-modal-url="@Url.Action("CajaAbrir", "Ventas")">
                <i class="bi bi-cash-coin me-1"></i> Abrir caja nueva
            </a>
        </div>

        <div class="table-wrap table-responsive">
            <table class="table align-middle">
                <thead class="table-dark">
                    <tr>
                        <th style="width:80px">Caja</th>
                        <th style="width:120px">Tienda</th>
                        <th style="width:160px">Usuario apertura</th>
                        <th style="width:180px">Fecha apertura</th>
                        <th style="width:160px">Usuario cierre</th>
                        <th style="width:180px">Fecha cierre</th>
                        <th>Estado</th>
                        <th style="width:160px" class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        var obs = item.Observacion ?? "";
                        bool esAbierta = obs.Equals("CAJA ABIERTA", StringComparison.OrdinalIgnoreCase);
                        bool esObservado = obs.Contains("OBSERVADO", StringComparison.OrdinalIgnoreCase);
                        bool esCierreOk = obs.Contains("CIERRE CORRECTO", StringComparison.OrdinalIgnoreCase);

                        var trClass =
                        esAbierta ? "table-warning" :
                        esObservado ? "table-danger" :
                        esCierreOk ? "table-success" : "";

                        <tr class="@trClass">
                            <td>@item.IdCaja</td>
                            <td>@item.IdTienda</td>
                            <td>@item.IdUsuarioApertura</td>
                            <td>@item.FechaApertura.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@(string.IsNullOrWhiteSpace(item.IdUsuarioCierre) ? "…" : item.IdUsuarioCierre)</td>
                            <td>@(item.FechaCierre.HasValue? item.FechaCierre.Value.ToString("yyyy-MM-dd HH:mm") : "…")</td>
                            <td>@obs</td>
                            <td class="text-end">
                                <!-- Ver: AJAX por data-modal-url + fallback por href -->
                                <a class="btn btn-icon btn-outline-primary"
                                   href="@Url.Action("Ver", "Ventas", new { id = item.IdCaja })"
                                   title="Ver">
                                    <i class="bi bi-eye"></i>
                                </a>


                                @* (Opcional) Botones cuando está abierta *@
                                @if (esAbierta)
                                {
                                    @* (Opcional) Botones cuando está abierta *@
                                    @if (esAbierta)
                                    {
                                        <a class="btn btn-sm btn-outline-success hover-pop me-1"
                                           asp-controller="Ventas"
                                           asp-action="NuevaVenta"
                                           asp-route-idcaja="@item.IdCaja"
                                           asp-route-idtienda="@item.IdTienda"
                                           asp-route-idusuario="@uid"
                                           title="Continuar venta">
                                            <i class="bi bi-arrow-right-circle"></i>
                                        </a>

                                    }
                                    <!-- [Views/Ventas/PuntoDeVenta.cshtml] -->
                                    <a class="btn btn-sm btn-outline-danger hover-pop me-1"
                                       href="/Ventas/Ventas/CajaCerrar?idCaja=@item.IdCaja"
                                       data-modal-url="/Ventas/Ventas/CajaCerrar?idCaja=@item.IdCaja"
                                       title="Cerrar caja">
                                        <i class="bi bi-power"></i>
                                    </a>

                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @await Component.InvokeAsync("Pager", Model)
    </div>
</div>
