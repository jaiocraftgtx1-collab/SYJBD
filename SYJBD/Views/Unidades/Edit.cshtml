@model SYJBD.Models.Unidad
@{
    ViewData["Title"] = "Editar unidad";
}
<div class="card">
    <div class="card-header"><h2 class="card-title">@ViewData["Title"]</h2></div>
    <div class="content" style="padding:16px;">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            @* ID como solo lectura en edición *@
            <fieldset disabled>
                <label>ID</label>
                <input asp-for="IdUnidad" class="form-control" />
            </fieldset>
            <input type="hidden" asp-for="IdUnidad" />
            <div class="mt-3">
                <label>Nombre</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <button class="btn btn-primary">Guardar</button>
                <a asp-action="Index" class="btn">Cancelar</a>
            </div>
        </form>
    </div>
</div>
