@model SYJBD.Models.Unidad
@{
    Layout = null;
}
<h3 class="mb-3">Nueva unidad</h3>
<form asp-action="CreateModal" method="post">
    @Html.AntiForgeryToken()
    <div class="row g-3">
        <div class="col-12 col-sm-4">
            <label class="form-label">ID (corto)</label>
            <input asp-for="IdUnidad" class="form-control" />
            <span asp-validation-for="IdUnidad" class="text-danger"></span>
            <small class="text-muted">Ej.: UND, PAR, DOC, SET</small>
        </div>
        <div class="col-12 col-sm-8">
            <label class="form-label">Nombre</label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
    </div>
    <div class="mt-4 d-flex gap-2">
        <button class="btn btn-primary"><i class="bi bi-check2"></i> Guardar</button>
        <button type="button" class="btn btn-light" data-modal-close>Cancelar</button>
    </div>
</form>
