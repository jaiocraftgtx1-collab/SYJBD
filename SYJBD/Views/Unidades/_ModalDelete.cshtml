@model SYJBD.Models.Unidad
@{
    Layout = null;
}
<h3 class="mb-2 text-danger"><i class="bi bi-exclamation-triangle"></i> Eliminar unidad</h3>
<p>¿Seguro que deseas eliminar la unidad <strong>@Model.IdUnidad - @Model.Nombre</strong>?</p>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@err.ErrorMessage</div>
        }
    </div>
}

<form asp-action="ConfirmDelete" asp-route-id="@Model.IdUnidad" method="post">
    @Html.AntiForgeryToken()
    <div class="mt-3 d-flex gap-2">
        <button class="btn btn-danger"><i class="bi bi-trash"></i> Sí, eliminar</button>
        <button type="button" class="btn btn-light" data-modal-close>Cancelar</button>
    </div>
</form>

<small class="text-muted d-block mt-2">Si la unidad está en uso por otros registros, no se podrá eliminar.</small>
