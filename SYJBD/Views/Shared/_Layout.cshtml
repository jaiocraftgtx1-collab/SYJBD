<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SYJBD</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <!-- Header 1: marca (fijo) -->
    <header class="header-top">
        <div class="container">
            <h1 class="m-0 fw-bold text-white">SYJ STYLE</h1>
        </div>
    </header>

    <!-- Header 2: navegación (fijo y centrado) -->
    @{
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    }
    <nav class="header-nav">
        <div class="container gap-2">
            <a asp-controller="Productos" asp-action="Index"
               class="btn nav-btn @(currentController == "Productos" ? "active" : "")">
                PRODUCTOS
            </a>
            @* aquí podrás agregar más botones en el futuro *@
        </div>
    </nav>

    <!-- Contenido -->
    <main class="container content-wrap">
        @RenderBody()
    </main>

    <!-- Footer fijo -->
    <footer class="footer-fixed">
        <div class="container text-center text-white-50 py-3">
            © 2025 SYJ STYLE
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
