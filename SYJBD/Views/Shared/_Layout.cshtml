@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Antiforgery
@inject IHttpContextAccessor HttpContextAccessor
@inject IAntiforgery Antiforgery
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - S&J STYLE</title>

    @{
        var tokens = Antiforgery.GetAndStoreTokens(HttpContextAccessor.HttpContext!);
    }
    <meta name="csrf-token" content="@tokens.RequestToken" />

    <link rel="preload" href="~/fonts/satoshi/Satoshi-Variable.woff2" as="font" type="font/woff2" crossorigin>
    <!-- Bootstrap Icons local + fallback CDN -->
    <link rel="preload" as="font" type="font/woff2" crossorigin href="~/lib/bootstrap-icons/font/fonts/bootstrap-icons.woff2" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" asp-append-version="true" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
          onload="document.documentElement.classList.add('bi-cdn-ok')">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)


    <!-- Estilo mínimo para el backdrop del sidebar (solo móvil) -->
    <style>
        #sidebar-backdrop {
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,.35);
            backdrop-filter: blur(1px);
            z-index: 999;
            display: none;
        }

            #sidebar-backdrop.open {
                display: block;
            }
    </style>
</head>

<body class="has-sidebar">
    @await Html.PartialAsync("_Sidebar")

    <!-- Backdrop para el sidebar en móvil -->
    <div id="sidebar-backdrop" aria-hidden="true"></div>

    <header class="topbar" style="background:linear-gradient(90deg,#6b46ff,#7c3aed);">
        <div class="container-fluid d-flex align-items-center justify-content-between">
            <button id="sidebarToggle"
                    class="btn btn-link text-white me-2"
                    type="button"
                    aria-label="Menú"
                    aria-controls="sidebar"
                    aria-expanded="true">
                <i class="bi bi-list"></i>
            </button>
            <div class="fw-semibold brand text-white">S&J STYLE S.A.C.</div>
            <div class="d-flex align-items-center gap-2 text-white">
                <i class="bi bi-person-circle"></i>
                <span>@User.Identity?.Name</span>
            </div>
        </div>
    </header>

    <main class="main nv-page">
    <div class="content">
      @RenderBody()
    </div>
  </main>

    <div id="app-loader" class="app-loader app-loader_hidden" aria-hidden="true">
        <div class="app-loader__backdrop"></div>
        <div class="app-loader__box" role="alert" aria-live="assertive">
            <div class="app-loader__spinner" aria-hidden="true"></div>
            <div class="app-loader__text">
                <strong id="app-loader-text">Procesando…</strong>
                <span class="app-loader__dots" aria-hidden="true">…</span>
            </div>
        </div>
    </div>

    <footer class="footer">
        <div class="container">© @DateTime.Now.Year S&J STYLE</div>
    </footer>
    @await Html.PartialAsync("_ModalHost")
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
