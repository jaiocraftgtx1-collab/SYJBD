@model SYJBD.Models.LoginViewModel
@{
    Layout = null;
    ViewData["Title"] = "Ingresar";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - SVJ STYLE</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body class="login-body">
    <main class="login-shell">
        <section class="login-card">
            <div class="login-left">
                <h1 class="lg-title">Iniciar sesión</h1>

                <form asp-action="Login" asp-controller="Auth" method="post" class="lg-form">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="ReturnUrl" />

                    <div class="lg-field">
                        <i class="bi bi-person"></i>
                        <input asp-for="Usuario" placeholder="Usuario o correo" autocomplete="username" />
                    </div>

                    <div class="lg-field">
                        <i class="bi bi-lock"></i>
                        <input asp-for="Contrasena" type="password" placeholder="Contraseña" autocomplete="current-password" />
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model?.Error))
                    {
                        <div class="lg-error">
                            <i class="bi bi-exclamation-triangle"></i> @Model.Error
                        </div>
                    }

                    <button class="lg-btn" type="submit">Entrar</button>
                </form>
            </div>

            <aside class="login-right">
                <div class="blob"></div>
                <div class="circle"></div>
                <div class="brand">SVJ STYLE</div>
            </aside>
        </section>
    </main>
</body>
</html>
