<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@(ViewData["Title"] ?? "S&J STYLE")</title>

    <link rel="stylesheet" href="~/css/base.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components.css" asp-append-version="true" />
</head>




<body class="syj">
    @await Html.PartialAsync("Partials/_HeaderWeb")
    <!-- Drawer + Backdrop -->
    <aside id="syj-drawer" class="syj-drawer" aria-hidden="true">
        <div class="syj-drawer__header">
            <strong>Menú</strong>
            <button id="syj-drawer-close" class="syj-close" aria-label="Cerrar">×</button>
        </div>

        <nav class="syj-menu" role="navigation">
            <a class="syj-menu__item" asp-controller="Website" asp-action="Index">Inicio</a>

            <button class="syj-menu__item syj-acc__btn" data-acc="productos" aria-expanded="false">
                Productos
                <span class="syj-caret">▾</span>
            </button>
            <div class="syj-acc__panel" data-panel="productos">
                <a class="syj-subitem" href="#">Categorías</a>
                <a class="syj-subitem" href="#">Tipo de productos</a>
                <a class="syj-subitem" href="#">Ver todo</a>
            </div>

            <button class="syj-menu__item syj-acc__btn" data-acc="business" aria-expanded="false">
                Business
                <span class="syj-caret">▾</span>
            </button>
            <div class="syj-acc__panel" data-panel="business">
                <a class="syj-subitem" href="#">Pedidos por mayor</a>
                <a class="syj-subitem" href="#">Pedidos personalizado</a>
            </div>

            <a class="syj-menu__item" href="#">Nosotros</a>
            <a class="syj-menu__item" href="#">Contacto</a>

            <button class="syj-menu__item syj-acc__btn" data-acc="siguenos" aria-expanded="false">
                Síguenos
                <span class="syj-caret">▾</span>
            </button>
            <div class="syj-acc__panel" data-panel="siguenos">
                <a class="syj-subitem" href="#" target="_blank" rel="noopener">Facebook</a>
                <a class="syj-subitem" href="#" target="_blank" rel="noopener">TikTok</a>
                <a class="syj-subitem" href="#" target="_blank" rel="noopener">Instagram</a>
            </div>
        </nav>
    </aside>

    <div id="syj-backdrop" class="syj-backdrop" aria-hidden="true"></div>

    <main class="syj-main">
        @RenderBody()
    </main>
    <script src="~/js/main.js" asp-append-version="true"></script>

    @await Html.PartialAsync("Partials/_FooterWeb")

    @RenderSection("Scripts", required: false)
</body>


</html>
